# Location for the ledger file holding all the information
:ledger: "<%= XDG['CONFIG'].to_s %>/ledger/ledger.csv"

# Fields that are present on the ledger as well as configurations for each field
# Each field can contain the following:
#   - default: "value" - Default value for the field when adding a transaction
#   - presence: true/false - Value is required or not
#   - values: List<"value"> - List of values available on TAB completion
:fields:
  :account:
    :default: 'Main'
    :presence: true
  :date:
    :default: "<%= Date.today %>"
    :presence: true
  :category:
    :default: ''
    :presence: true
    :values:
      - Business
      - Electronics
      - Insurances
      - Taxes
      - Entertainment
      - Rentals
      - Restaurants
      - Coffee
      - Public Transport
      - Groceries
      - Taxi
      - Fees & Charges
      - Beers
      - Education
      - Travel
      - Personal Care
      - Mobile Phone
  :description:
    :default: ''
    :presence: false
  :amount:
    :default: ''
    :presence: true
  :currency:
    :default: 'EUR'
    :presence: true
    :values:
      - EUR
      - USD
  :processed:
    :default: 'yes'
    :presence: true
    :values:
      - 'yes'
      - 'no'
  :travel:
    :default: ''
    :presence: false

# Define the set of formats to be used across the application
:format:
  :output:
    :default:
      # Fallback to be displayed when money is not present
      :money: '------'
      # Fallback to be displayed when percentage is not present
      :percentage: '-----'
      # Fallback to be displayed when travel is not present
      :travel: '-----'
    # Section to define colors of the output
    :color:
      # Color of the header of the table
      :header:
        :color: :blue
        :bold: true
      # Color of each regular row
      :element:
        :color: :white
      # Color of the total amounts
      :total:
        :color: :yellow
      # Color for the period amounts
      :period:
        :color: :magenta
      # Color according to the value of the processed field
      :processed:
        'yes':
          :color: :white
        'no':
          :color: :black
    # Options on how to print the title of a table
    :title:
      :width: 70
      :align: 'center'
      :rule: true
      :color: :cyan
      :bold: true
    # Options related to show a transaction
    :transaction:
      :list:
        # Fields to be shown for a transaction
        :header:
          - Date
          - Category
          - Amount
          - Trip
        # Options for each column
        :options:
          - :width: 15
          - :width: 20
          - :width: 15
            :align: 'center'
          - :width: 15
            :align: 'center'
    # Options related to how to display a report
    :report:
      :summary:
        # Fields to be shown for a summary report
        :header:
          - Category
          - Outflow
          - (%)
          - Inflow
          - (%)
        # Options for each column
        :options:
          - :width: 20
          - :width: 15
            :align: 'center'
          - :width: 7
            :align: 'center'
          - :width: 15
            :align: 'center'
          - :width: 7
            :align: 'center'
      :detailed:
        # Fields to be shown for a detailed report
        :header:
          - Date
          - Category
          - Amount
          - (%)
        # Options for each column
        :options:
          - :width: 15
          - :width: 20
          - :width: 15
            :align: 'center'
          - :width: 7
            :align: 'center'
    # Options related to how to display the list of trips
    :trip:
      :summary:
        # Fields to be shown for a summary of trips
        :header:
          - Category
          - Amount
          - (%)
        # Options for each column
        :options:
          - :width: 20
          - :width: 20
            :align: 'center'
          - :width: 10
            :align: 'center'
      :detailed:
        # Fields to be shown for a detailed showdown of trips
        :header:
          - Account
          - Date
          - Category
          - Amount
          - (%)
        # Options for each column
        :options:
          - :width: 10
          - :width: 15
          - :width: 20
          - :width: 15
            :align: 'center'
          - :width: 7
            :align: 'center'
      :global:
        :header:
          - Trip
          - Amount
          - (%)
        :options:
          - :width: 20
          - :width: 20
            :align: 'center'
          - :width: 10
            :align: 'center'
  :fields:
    # For more information on the configuration values, please read:
    # http://www.rubydoc.info/gems/money/Money/Formatting
    :money:
      # Format of the money when displaying it on the UI
      :display:
        :sign_positive: true
        :decimal_mark: '.'
        :symbol_after_without_space: true
        :symbol_position: :after
      # Format of the money when writing it to the ledger
      :ledger:
        :sign_positive: true
        :decimal_mark: '.'
        :symbol_after_without_space: true
        :symbol_position: :after
        :symbol: false
        :thousands_separator: ''
    # Symbols to be used when displaying if a field has been processed or not
    :processed:
      'yes': :white
      'no': :black
    # List of categories to be excluded by default on the general report
    :excluded_categories:
      - 'Exchange'

# Values for configuring encryption on the ledger file
:encryption:
  # Enable or disable encryption
  # The other settings are not required if enabled is set to false
  :enabled: false
  # Choose the algorithm encryption
  # Options: `ruby -r openssl -e "puts OpenSSL::Cipher.ciphers.join('|')"`
  :algorithm: AES-256-CBC
  # Add credentials to encrypt the file. This is a shell command.
  :credentials:
    :salt: some_salt
    :password: some_password
    :salteval: gpg -q --for-your-eyes-only --no-tty -d salt.gpg
    :passwordeval: gpg -q --for-your-eyes-only --no-tty -d password.gpg
