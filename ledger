#!/usr/bin/env ruby

require 'pry'
require 'csv'
require 'bigdecimal'
require 'date'
require 'readline'
require 'optparse'
require 'optparse/date'
require 'openssl'
require 'tempfile'
require 'money'
require 'money/bank/google_currency'

I18n.enforce_available_locales = false
Money.default_bank = Money::Bank::GoogleCurrency.new

Dir.glob(File.join(File.expand_path(File.dirname(__FILE__)), 'lib', '*.rb')).each { |file| require_relative file }

fail ArgumentError, 'Environment variable LEDGER with the location of the ledger file must be specified' unless ENV['LEDGER']

Ledger.new.create! and exit if ARGV[0] == 'create'

options = UI.new.tap(&:run).options

case
when options[:add]          then Ledger.new.add!
when options[:open]         then Ledger.new.open!
when options[:balance]      then Printer.new.balance
when options[:categories]   then Printer.new.categories
when options[:transactions] then Printer.new.transactions
when options[:trips]        then Printer.new.trips(options[:trips])
when options[:report]       then Printer.new.report(options[:report])
end
